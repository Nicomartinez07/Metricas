generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  password        String   // Hash de la contrase√±a
  dashboardLayout Json?    
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([email])
}

model Survey {
  id               String      @id @default(cuid())
  createdAt        DateTime    @default(now())
  email            String
  serviceType      ServiceType
  
  conformidad      Int
  atencionCliente  Int
  satisfaccion     Int
  recomendacion    Int
  experiencia      Int
  
  promedioGeneral  Float
  
  source           String?     @default("google_forms")
  formId           String?
  
  @@index([createdAt])
  @@index([serviceType])
  @@index([createdAt, serviceType])
}

enum ServiceType {
  VENTA
  POSTVENTA
}